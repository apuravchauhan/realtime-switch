# AI Provider API Keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
HOST=localhost

# Test Client Configuration
CLIENT_TEST_PORT=3005

# Provider Switching Configuration
SWITCH_LATENCY_THRESHOLD_MS=500
SWITCH_FAILURE_COUNT=3

# Local Account Authentication (accountId=secretKey pairs)
# Default test account - matches test clients (auth-test-client.js, index-test.html)
ACCOUNTS=996-sdassds-86-asd=secretkey-996
# Multiple accounts example: ACCOUNTS=account1=secretkey1,account2=secretkey2

# Authentication System Configuration - Versioned Keys
SYSTEM_TOKEN_KEY_V1=your-system-token-key
SYSTEM_TOKEN_KEY_CURRENT=v1

# Database Configuration (Optional - for production)
ENABLE_DB=false
# Set ENABLE_DB=true to use Firestore for account management
# When false, uses only ACCOUNTS from above for authentication
FIRESTORE_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/firebase-service-account.json

#FILE or SQLITE
PERSISTENCE=SQLITE